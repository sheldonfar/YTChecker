{
	"manifest_version": 2,

	"name": "Youtube Checker",
	"version": "1.0",
	"description": "Periodically checks for video updates on the Youtube page",

	"permissions": [
		"https://www.youtube.com/feed/subscriptions",
		"http://www.youtube.com/feed/subscriptions"
	],

	"background": {
		"scripts": ["js/background.js", "js/jquery.js"]
	},

	"browser_action": {
		"default_title": "Youtube Checker", 
		"default_icon": "images/icon.png",
		"default_popup": "popup.html"
	}
}