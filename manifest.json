{
	"manifest_version": 2,

	"name": "YTChecker",
	"version": "1.0",
	"description": "A simple checker of unwatched YouTube videos",

	"permissions": [
		"https://www.youtube.com/feed/subscriptions",
		"http://www.youtube.com/feed/subscriptions"
	],

	"background": {
		"scripts": ["js/background.js", "js/jquery.js"]
	},

	"browser_action": {
		"default_title": "Youtube Checker", 
		"default_icon": "images/icon.png",
		"default_popup": "popup.html"
	},
	
	"icons": {
		"16": "images/youtube16.png",
        "48": "images/youtube48.png",
        "128": "images/youtube128.png" 	
	}
}